        <Enabled>true</Enabled>
        <Color>0.8 0.8 0.45</Color>
        <Range> 60 </Range>
        <Brightness> 350 </Brightness>
        <Shadows>
            <DepthBias> 0.1 </DepthBias>
            <NearPlane> 0.001 </NearPlane>
            <FarPlane>  1500  </FarPlane>
        </Shadows>
        <Point>
            <Attenuation> 1 1 1 </Attenuation>
        </Point>
    </Light>
    <Light>
